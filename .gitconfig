[core]
	editor = vim
	excludesfile = /home/gkouros/.gitignore_global
[user]
	email = george.kouros.ece@gmail.com
	; email = george@kapernikov.com
	name = George Kouros
[color]
  ui=auto
[log]
  decorate=full
[push]
  default=tracking
[alias]
  tree = log --oneline --graph
[filter "nbstrip_full"]
  clean = "jq --indent 1 \
             '(.cells[] | select(has(\"outputs\")) | .outputs) = []  \
             | (.cells[] | select(has(\"execution_count\")) | .execution_count) = null  \
             | .metadata = {\"language_info\": {\"name\": \"python\", \"pygments_lexer\": \"ipython3\"}} \
             | .cells[].metadata = {} \
             '"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
